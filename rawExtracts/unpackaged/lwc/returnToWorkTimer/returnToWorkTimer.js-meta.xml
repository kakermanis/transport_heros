<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Return to Work Timer</masterLabel>
    <targets>
      <target>lightning__AppPage</target>
      <target>lightning__RecordPage</target>
      <target>lightning__HomePage</target>
      <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
                <object>Contact</object>
            </objects>
            <property name="CardTitle" label="Card Title" type="String" default="Return to Work" />
            <property name="CardIcon" label="Card Icon" type="String" default="standard:loop" />
            <property name="ShowProgressBar" label="Show Progress Bar?" type="Boolean" default="true" />
        </targetConfig>

        <targetConfig targets="lightningCommunity__Default">
          <property name="CardTitle" label="Card Title" type="String" default="Return to Work" />
          <property name="CardIcon" label="Card Icon" type="String" default="standard:loop" />
          <property name="ShowProgressBar" label="Show Progress Bar?" type="Boolean" default="true" />
          <property
            name="objectApiName"
            type="String"
            label="Object Name"
            description="Automatically bind the page's object name to the component variable"
            default="{!objectApiName}" />
            <property
                name="recordId"
                type="String"
                label="Record Id"
                description="Automatically bind the page's record id to the component variable"
                default="{!recordId}" />
      </targetConfig>
 </targetConfigs>
</LightningComponentBundle>